# Database
# Connection pool settings for better performance:
# - connection_limit: Maximum number of connections (default: 2, recommended: 10-20)
# - pool_timeout: How long to wait for a connection (default: 10s)
DATABASE_URL="postgresql://username:password@host:5432/fluffnwoof?sslmode=require&connection_limit=20&pool_timeout=30"

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d

# CORS
FRONTEND_URL=http://localhost:5173

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# SMS (Twilio)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email
SMTP_PASS=your_password
SMTP_FROM=noreply@fluffnwoof.com

# ══════════════════════════════════════════════════════════════
# Monitoring & Error Tracking
# ══════════════════════════════════════════════════════════════
# Sentry DSN (optional - for production error tracking)
SENTRY_DSN=

# ══════════════════════════════════════════════════════════════
# Feature Flags
# ══════════════════════════════════════════════════════════════
FEATURE_CUSTOMER_PORTAL=true
FEATURE_SMS=true
FEATURE_WHATSAPP=false
FEATURE_NEW_DASHBOARD=false
FEATURE_NEW_DASHBOARD_ROLLOUT=0
FEATURE_ADVANCED_REPORTS=true
FEATURE_DARK_MODE=true
FEATURE_EMAIL=true
FEATURE_MULTI_LANGUAGE=true
FEATURE_REMINDERS=true
FEATURE_ONLINE_BOOKING=true

# ══════════════════════════════════════════════════════════════
# Redis (optional - for caching and rate limiting)
# ══════════════════════════════════════════════════════════════
REDIS_URL=
